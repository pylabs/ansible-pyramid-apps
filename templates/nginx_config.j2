server {
    listen 80;
    listen [::]:80;

    server_name enroll.bjes.tp.edu.tw;

    location /.well-known {
        alias /var/lib/dehydrated;
    }

    return 301 https://$server_name$request_uri;
}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    ssl on;
    ssl_certificate /var/lib/dehydrated/certs/enroll.bjes.tp.edu.tw/fullchain.pem;
    ssl_certificate_key /var/lib/dehydrated/certs/enroll.bjes.tp.edu.tw/privkey.pem;
    ssl_session_timeout 5m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    server_name enroll.bjes.tp.edu.tw;
    client_max_body_size 20M;

    location / {
        allow 172.17.0.0/16;
        deny all;
        include uwsgi_params;
        uwsgi_pass unix:/run/uwsgi/enroll.bjes.tp.edu.tw.sock;
    }

    location /static {
        allow 172.17.0.0/16;
        deny all;
        alias /srv/www/enroll.bjes.tp.edu.tw/tp_enroll/static;
    }

    location /.well-known {
        alias /var/lib/dehydrated;
    }
}

[uwsgi]
strict = true
chdir = {{ item.base_dir }}
home  = {{ item.base_dir }}/.venv
wsgi-file = {{ item.base_dir }}/wsgi.py
single-interpreter = true
enable-threads = true
processes = {{ cpu_count.stdout }}
threads = 2
die-on-term = true
need-app = true
disable-logging = true
log-4xx = true
log-5xx = true
max-requests = 1000
max-worker-lifetime = 3600
worker-reload-mercy = 60
harakiri = 60
py-call-osafterfork = true
auto-procname = true
vacuum = true
socket = /run/uwsgi/{{ item.domain_name }}.sock
chmod-socket = 644
